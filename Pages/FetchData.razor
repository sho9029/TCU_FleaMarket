@page "/fetchdata"

<PageTitle>User fetch</PageTitle>

@using TCU_FleaMarket.Data
@inject UserService UserService
@inject ExhibitService ExhibitService

<section>
    <h1>User data list</h1>

    @if (users == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Biography</th>
                    <th>Image</th>
                    <th>Contact</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Biography</td>
                        <td>@user.Image</td>
                        <td>@user.Contact</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>
<section>
    <h1>Exhibit data list</h1>

    @if (exhibits == null || users == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>ExhibitorId</th>
                    <th>ExhibitorName</th>
                    <th>ExhibitorBiography</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exhibit in exhibits)
                {
                    <tr>
                        <td>@exhibit.Id</td>
                        <td>@exhibit.ExhibitorsId</td>
                        <td>@users.First(q => q.Id == exhibit.ExhibitorsId).Name</td>
                        <td>@users.First(q => q.Id == exhibit.ExhibitorsId).Biography</td>
                        <td>@exhibit.Name</td>
                        <td>@exhibit.Description</td>
                        <td>@exhibit.Image</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>

@code {
    private List<User>? users;
    private List<Exhibit>? exhibits;

    protected override async Task OnInitializedAsync()
    {
        users = await UserService.GetUserAsync();
        exhibits = await ExhibitService.GetExhibitAsync();
    }
}
